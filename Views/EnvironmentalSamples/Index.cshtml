                            @Html.EditorFor(modelItem => item.ps_well_number, new { htmlAttributes = new { @class = "form-editor", @id = "ps_well_number_txtEditor_" + item.ps_id } })
                        </div>
                        <div id="ps_well_number_display_@item.ps_id">
