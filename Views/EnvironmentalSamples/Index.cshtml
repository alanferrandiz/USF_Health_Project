@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">

    function edit(tdID, editorID, displayID, txtEditorID, txtDisplayID, ps_id) {


        if (document.getElementById(editorID).style.display == 'none') {
            document.getElementById(editorID).style.display = 'block';
            document.getElementById(displayID).style.display = 'none';

            document.getElementById(txtEditorID).value = document.getElementById(displayID).innerHTML.trim();

            document.getElementById(txtEditorID).focus();
            document.getElementById(txtEditorID).select();
        }
        else if (document.getElementById(displayID).style.display == 'none') {

            if (tdID.includes('psres_result_td') == true) {

                if (document.getElementById(txtEditorID).value.toUpperCase().trim() == 'P' || document.getElementById(txtEditorID).value.toUpperCase().trim() == 'N' || document.getElementById(txtEditorID).value.toUpperCase().trim() == '') {
                    UpdateResult(ps_id, document.getElementById(txtEditorID).value.toUpperCase().trim(), txtEditorID, displayID);
                }
                else {
                    alert('Only P or N allowed');
                }

            } else if (tdID.includes('psres_ct_value_td') == true) {
                UpdateCTValue(ps_id, document.getElementById(txtEditorID).value, txtEditorID, displayID);
            } else if (tdID.includes('ps_well_number_td') == true) {
                UpdateWellNumber(ps_id, document.getElementById(txtEditorID).value, txtEditorID, displayID);
            }
            
            document.getElementById(displayID).style.display = 'block';
            document.getElementById(editorID).style.display = 'none';
            
        }
    }

    function handle(e, tdID, editorID, displayID, txtEditorID, txtDisplayID, ps_id) {

        if (e.keyCode === 13) {
            e.preventDefault();
            edit(tdID, editorID, displayID, txtEditorID, txtDisplayID, ps_id);

        } else if (e.keyCode === 27) {
            e.preventDefault();
            document.getElementById(displayID).style.display = 'block';
            document.getElementById(editorID).style.display = 'none';
        }
    }

</script>


<script type="text/javascript">


    function UpdateWellNumber(id, value, txtEditorID, displayID) {
    $.ajax({
    url: '@Url.Action("UpdateWellNumber")',
    type: 'GET',
    dataType: 'text',
    cache: false,
        data: { 'id': id, 'value': value},
        success: function (results) {
            document.getElementById(txtEditorID).value = value;
            document.getElementById(displayID).innerHTML = value;
    },
    error: function () {
        alert('Error occured');
    }
    });
    }


</script>

